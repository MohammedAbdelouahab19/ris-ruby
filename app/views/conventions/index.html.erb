
<div class="container mt-5">
    <h1>Conventions</h1>
    <div class="filters mb-3">
        <form action="<%= conventions_path %>" method="get" class="form-inline">
            <div class="form-group mr-2">
                <label for="search" class="mr-2">Search:</label>
                <input type="text" name="search" id="search" class="form-control" value="<%= params[:search] %>">
            </div>
            <div class="form-group mr-2">
                <label for="filter" class="mr-2">Filter:</label>
                <select name="filter" id="filter" class="form-control">
                    <option value="">Select Filter</option>
                    <!-- Add filter options here -->
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
        </form>
        <%= link_to 'conventions list', conventions_path %>
    </div>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <% @conventions.each do |convention| %>
                <tr>
                    <td><%= convention.id %></td>
                    <td><%= convention.name %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
